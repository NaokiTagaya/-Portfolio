<%= render partial: 'layouts/notifications' %>
<div class="container margin-top-20">
  <div class="col-sm-6 offset-md-3 txt-center form-square account-regi">
    <h3>ログイン</h3>
    <br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, 'メールアドレス' %>
        <br>
        <%= f.email_field :email, class:"form-control font-14", autofocus: true, autocomplete: "email" %>
        <br>
      </div>

      <div class="field">
        <%= f.label :password, 'パスワード' %>
        <br>
        <%= f.password_field :password, class:"form-control font-14", autocomplete: "current-password" %>
        <br>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, 'ログイン情報を記憶する' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "form-control form-submit" %>
      </div>
    <% end %>
    <br>
    <%= link_to "会員登録はこちら", new_user_registration_path %>
    <br>
    <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>
  </div>
</div>
