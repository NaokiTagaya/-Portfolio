<% if !Favorite.exists?(user_id: current_user.id, restaurant_id: restaurant.id) %>
  <%= link_to restaurant_favorites_path(restaurant.id), method: :restaurant, remote: true, class:"like-btn" do %>
    <span>お気に入り登録☆</span>
  <% end %>
  <span class="star-count1"><%= restaurant.favorites.count %></span>
<% else %>
  <%= link_to restaurant_favorite_path(restaurant_id: restaurant.id, id: restaurant.favorites[0].id), method: :delete, remote: true, class:"like-btn" do %>
    <span>お気に入り解除★</span>
  <% end %>
  <span class="star-count2"><%= restaurant.favorites.count %></span>
<% end %>